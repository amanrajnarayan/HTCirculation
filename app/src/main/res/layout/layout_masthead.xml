<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

<!--    Hindustan times logo-->
    <ImageView
        android:id="@+id/imgHtEnglish"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_ht_english"
        android:contentDescription="Hindustan Times" />

    <!-- spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

<!--    Hindustan logo-->
    <ImageView
        android:id="@+id/imgHtHindi"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_ht_hindi"
        android:contentDescription="Hindustan Hindi" />

</LinearLayout>
