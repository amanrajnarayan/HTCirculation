<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agent.AgentBookUnsoldActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">


        <Spinner
            android:id="@+id/spPublication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/card_bg"
            />

        <EditText
            android:id="@+id/etIssueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Issue Date"
            android:focusable="false"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primary_red"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_dark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvOrderedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered: - | Return Allowed: -"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etUnsoldQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unsold Quantity"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primary_red"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_dark"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btnSubmitUnsold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Unsold"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_primary"
            android:textColor="@color/text_light"
            android:textAllCaps="false"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>