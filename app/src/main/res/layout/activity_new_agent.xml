<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Agent Name"
                android:inputType="textPersonName"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/spDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:popupBackground="@color/card_bg"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etDropPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Drop Point"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/etLocationUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Location URL (Google Maps Link)"
                android:inputType="textUri"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etUnsoldLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Unsold Limit"
                android:inputType="number"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etSecurityDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Security Deposit"
                android:inputType="number"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/primary_red"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="15sp"/>


            <Button
                android:id="@+id/btnSaveAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Save Agent"
                android:background="@drawable/btn_primary"
                android:textColor="@color/text_light"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
